using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CelsiusToFhrenheit2
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.Write("Enter the Temperature in Celsius(°C) : ");
            double celsius = double.Parse(Console.ReadLine());
            double faren = celsius * 1.8 + 32;
            double result = Math.Round(faren, 2);

            Console.WriteLine("Temperature in Fahrenheit is(°F) : " + result);

        }
    }
}
